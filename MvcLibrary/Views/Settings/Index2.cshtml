@using MvcLibrary.Models.Entity
@model List<tbl_Admin>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
<br />
<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>User</th>
        <th>Authorization</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.USER_NAME</td>
            <td>@item.AUTHORIZATION</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Settings/AdminUpdate/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Update
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Settings/AdminDelete/@item.ID">
                    <i class="fas fa-trash">
                    </i>
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
<br />
<buttton class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Add New Admin</buttton>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add Admin Panel</h2>
            </div>
            <form method="post" action="/Settings/NewAdmin/">
                <div class="modal-body">
                    <label>User Name</label>
                    <input type="text" name="user_name" class="form-control" />
                    <br />
                    <label>Password</label>
                    <input type="text" name="password" class="form-control" />
                    <br />
                    <label>Authorization</label>
                    <input type="text" name="authorization" class="form-control" />
                    <br />
                    <button class="btn btn-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>