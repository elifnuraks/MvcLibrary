@using MvcLibrary.Models.Entity
@model List<tbl_Books>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Book Page</h2>

@using (Html.BeginForm("Index", "Books", FormMethod.Get))
{

    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Enter Book Name: &nbsp;</b> @Html.TextBox("p")
        <input type="submit" value="call"/>
    </div>


}


<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Category</th>
        <th>Print Year</th>
        <th>Publisher</th>
        <th>Page</th>
        <th>State</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td> @k.ID</td>
            <td> @k.NAME</td>
            <td> @k.tbl_Authors.NAME&nbsp;  @k.tbl_Authors.SURNAME</td>
            <td> @k.tbl_Categories.NAME</td>
            <td> @k.PRINTYEAR</td>
            <td> @k.PUBLISHER</td>
            <td> @k.PAGE</td>
            <td> @k.STATE</td>
            <td><a href="/Books/BookDelete/@k.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Books/BookBring/@k.ID" class="btn btn-success">Update</a></td>

        </tr>
    }
</table>
<a href="/Books/AddBook/" class="btn btn-primary">Add New Book</a>