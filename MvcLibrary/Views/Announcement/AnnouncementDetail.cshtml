@model MvcLibrary.Models.Entity.tbl_Announcement
@{
    ViewBag.Title = "AnnouncementDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AnnouncementUpdate", "Announcement", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(c => c.ID)
        @Html.TextBoxFor(c => c.ID, new { @class = "form-control" })
        <br />
        @*@Html.LabelFor(c=>c.NAME)*@
        <label>Announcement Category</label>
        @Html.TextBoxFor(c => c.CATEGORY, new { @class = "form-control" })
        <br />
        <label>Announcement Content</label>
        @Html.TextAreaFor(c => c.CONTENTS, new { @class = "form-control" })
        <br />
        <label>Announcement Date</label>
        @Html.TextBoxFor(c => c.DATE, new { @class = "form-control" })

    </div>
    <div>
        <button class="btn btn-warning">Update</button>
    </div>
}
