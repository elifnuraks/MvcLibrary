@model MvcLibrary.Models.Entity.tbl_Authors
@{
    ViewBag.Title = "AuthorBring";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AuthorUpdate", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Author ID</label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Name</label>
            @Html.TextBoxFor(y => y.NAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Surname</label>
            @Html.TextBoxFor(y => y.SURNAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Detail Information</label>
            @Html.TextAreaFor(y => y.DETAIL, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Update Author Information</button>
    </div>
        
}

